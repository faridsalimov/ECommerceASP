@model ProductAddViewModel
<form asp-action="add" method="post">

    <div class="form-group">
        <label>Product Name</label>
        <input asp-for="Product.ProductName" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label>Unit Price</label>
        <input asp-for="Product.UnitPrice" type="number" class="form-control">
    </div>
    <div class="form-group">
        <label>Units In Stock</label>
        <input asp-for="Product.UnitsInStock" type="number" class="form-control">
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Example select</label>
        <select asp-for="Product.CategoryId" class="form-control" id="exampleFormControlSelect1">
            @foreach (var c in Model.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Add Product</button>
    </div>
</form>